{
    "openapi": "3.1.0",
    "info": {
        "title": "SAP SuccessFactors Time Off API",
        "description": "API for retrieving upcoming time off events",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://0.0.0.0:8000"
        }
    ],
    "paths": {
        "/api/time-off/upcoming": {
            "post": {
                "summary": "Get Upcoming Time Off",
                "description": "Retrieves upcoming time off",
                "operationId": "get_upcoming_time_off",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/TimeOffRequest"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successfully retrieved time off events",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UpcomingTimeOffResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request parameters",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ErrorResponse": {
                "properties": {
                    "status_code": {
                        "type": "integer",
                        "title": "Status Code"
                    },
                    "error": {
                        "type": "string",
                        "title": "Error"
                    }
                },
                "type": "object",
                "required": [
                    "status_code",
                    "error"
                ],
                "title": "ErrorResponse",
                "description": "Error response model."
            },
            "HTTPValidationError": {
                "properties": {
                    "detail": {
                        "items": {
                            "$ref": "#/components/schemas/ValidationError"
                        },
                        "type": "array",
                        "title": "Detail"
                    }
                },
                "type": "object",
                "title": "HTTPValidationError"
            },
            "TimeOffRequest": {
                "properties": {
                    "user_id": {
                        "type": "string",
                        "title": "User Id"
                    },
                    "start_date": {
                        "type": "string",
                        "title": "Start Date",
                        "example": "2024-01-01"
                    },
                    "end_date": {
                        "type": "string",
                        "title": "End Date"
                    },
                    "time_off_types": {
                        "items": {
                            "type": "string",
                            "enum": [
                                "ABSENCE",
                                "PUBLIC_HOLIDAY",
                                "NON_WORKING_DAY"
                            ],
                            "title": "TimeOffTypes"
                        },
                        "type": "array",
                        "title": "Time Off Types",
                        "description": "List of time off types to retrieve"
                    }
                },
                "type": "object",
                "required": [
                    "user_id",
                    "start_date",
                    "time_off_types"
                ],
                "title": "TimeOffRequest",
                "description": "Request model for getting upcoming time off."
            },
            "UpcomingTimeOff": {
                "properties": {
                    "title": {
                        "type": "string",
                        "title": "Title"
                    },
                    "start_date": {
                        "type": "string",
                        "title": "Start Date"
                    },
                    "end_date": {
                        "type": "string",
                        "title": "End Date"
                    },
                    "start_time": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Start Time"
                    },
                    "end_time": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "End Time"
                    },
                    "duration": {
                        "type": "integer",
                        "title": "Duration"
                    },
                    "time_unit": {
                        "type": "string",
                        "title": "Time Unit"
                    },
                    "cross_midnight": {
                        "type": "boolean",
                        "title": "Cross Midnight"
                    },
                    "type": {
                        "type": "string",
                        "title": "Type"
                    },
                    "status_formatted": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Status Formatted"
                    },
                    "absence_duration_category": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Absence Duration Category"
                    }
                },
                "type": "object",
                "required": [
                    "title",
                    "start_date",
                    "end_date",
                    "duration",
                    "time_unit",
                    "cross_midnight",
                    "type"
                ],
                "title": "UpcomingTimeOff",
                "description": "Represents an upcoming time off event in SAP SuccessFactors."
            },
            "UpcomingTimeOffResponse": {
                "properties": {
                    "time_off_events": {
                        "items": {
                            "$ref": "#/components/schemas/UpcomingTimeOff"
                        },
                        "type": "array",
                        "title": "Time Off Events"
                    }
                },
                "type": "object",
                "required": [
                    "time_off_events"
                ],
                "title": "UpcomingTimeOffResponse",
                "description": "Represents the response from getting a user's upcoming time off."
            },
            "ValidationError": {
                "properties": {
                    "loc": {
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "integer"
                                }
                            ]
                        },
                        "type": "array",
                        "title": "Location"
                    },
                    "msg": {
                        "type": "string",
                        "title": "Message"
                    },
                    "type": {
                        "type": "string",
                        "title": "Error Type"
                    }
                },
                "type": "object",
                "required": [
                    "loc",
                    "msg",
                    "type"
                ],
                "title": "ValidationError"
            }
        }
    }
}
